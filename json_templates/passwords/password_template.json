{
  "username": {
    "type": "string",
    "minLength": 1,
    "maxLength": 50,
    "description": "Kullanıcı adı"
  },
  "password": {
    "type": "string",
    "minLength": 8,
    "maxLength": 128,
    "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[@$!%*?&])[A-Za-z\\d@$!%*?&]{8,}$",
    "description": "Şifre en az 8 karakter olmalı, büyük harf, küçük harf, rakam ve özel karakter içermelidir"
  },
  "website": {
    "type": "string",
    "format": "uri",
    "description": "Web sitesi URL'si"
  }
}
